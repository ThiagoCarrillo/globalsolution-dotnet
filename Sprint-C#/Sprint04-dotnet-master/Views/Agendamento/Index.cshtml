@model IEnumerable<Sessions_app.Models.Agendamento>

@{
    ViewData["Title"] = "Agendamentos";
}

<div class="container-fluid px-4">
    <div class="hero-index bg-white rounded-3 shadow-sm p-4 mb-5">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div>
                <h1 class="display-5 fw-bold text-dark mb-3">
                    <i class="fas fa-calendar-alt me-3 text-primary"></i>@ViewData["Title"]
                </h1>
                <p class="lead text-muted mb-0">Lista de agendamentos cadastrados</p>
            </div>
            <a asp-action="Create" class="btn btn-primary mt-3 mt-md-0 px-4 py-2">
                <i class="fas fa-plus-circle me-2"></i>Novo Agendamento
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th class="ps-4">Paciente</th>
                            <th>Médico</th>
                            <th>Data</th>
                            <th>Descrição</th>
                            <th class="text-end pe-4">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover-scale">
                                <td class="ps-4">@item.Paciente?.Nome</td>
                                <td>@item.Medico?.Nome</td>
                                <td>@item.DataAgendamento.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.Descricao</td>
                                <td class="text-end pe-4">
                                    <div class="d-flex gap-2 justify-content-end">
                                        <a asp-action="Details" asp-route-id="@item.IdAgendamento"
                                           class="btn btn-action btn-info"
                                           title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdAgendamento"
                                           class="btn btn-action btn-warning"
                                           title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdAgendamento"
                                           class="btn btn-action btn-danger"
                                           title="Excluir">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@model Sessions_app.Models.Agendamento;

@{
    ViewData["Title"] = "Editar Agendamento";
}

<div class="container py-5">
    <div class="hero-index bg-white rounded-3 shadow-sm p-4 mb-5">
        <h1 class="display-5 fw-bold text-dark">
            <i class="fas fa-edit me-3 text-primary"></i>@ViewData["Title"]
        </h1>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="IdAgendamento" />

                <div class="row g-4">
                    <!-- Mesmo conteúdo do Create.cshtml -->
                    @await Html.PartialAsync("_CreateEditForm")

                    <div class="col-12">
                        <button type="submit" class="btn btn-primary-gradient">
                            <i class="fas fa-save me-2"></i>Salvar Alterações
                        </button>
                        <a asp-action="Index" class="btn btn-link text-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
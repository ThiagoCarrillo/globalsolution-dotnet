@model IEnumerable<Sessions_app.Models.Medico>

@{
    ViewData["Title"] = "Médicos";
}

<div class="container-fluid px-4">
    <!-- Header Section -->
    <div class="hero-index bg-white rounded-3 shadow-sm p-4 mb-5">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
            <div>
                <h1 class="display-5 fw-bold text-dark mb-3">
                    <i class="fas fa-user-md me-3 text-primary"></i>Gerenciamento de Médicos
                </h1>
                <p class="lead text-muted mb-0">Cadastro e administração de profissionais cadastrados</p>
            </div>
            <a asp-action="Create" class="btn btn-primary mt-3 mt-md-0 px-4 py-2">
                <i class="fas fa-user-plus me-2"></i>Novo Médico
            </a>
        </div>
    </div>

    <!-- Table Section -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-primary-gradient text-white">
                        <tr>
                            <th class="ps-4">
                                <i class="fas fa-user me-2"></i>Nome
                            </th>
                            <th>
                                <i class="fas fa-id-badge me-2"></i>CRM
                            </th>
                            <th>
                                <i class="fas fa-phone me-2"></i>Telefone
                            </th>
                            <th>
                                <i class="fas fa-envelope me-2"></i>E-mail
                            </th>
                            <th class="text-end pe-4">
                                <i class="fas fa-tools me-2"></i>Ações
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="hover-scale">
                                <td class="ps-4 fw-medium">@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.CRM)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td class="text-end pe-4">
                                    <div class="d-flex gap-2 justify-content-end">
                                        <a asp-action="Details" asp-route-id="@item.IdMedico"
                                           class="btn btn-action btn-info"
                                           data-bs-toggle="tooltip"
                                           title="Ver detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.IdMedico"
                                           class="btn btn-action btn-warning"
                                           data-bs-toggle="tooltip"
                                           title="Editar registro">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.IdMedico"
                                           class="btn btn-action btn-danger"
                                           data-bs-toggle="tooltip"
                                           title="Excluir registro">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination and Status -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mt-4">
        <div class="mb-3 mb-md-0">
            <span class="badge bg-success">
                <i class="fas fa-check-circle me-2"></i>Total de médicos: @Model.Count()
            </span>
        </div>
        <nav>
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Anterior</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Próximo</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

<style>
    /* Estilos Aprimorados */
    .hero-index {
        background: white !important;
        border: 1px solid #e9ecef;
        box-shadow: 0 2px 15px rgba(0,0,0,0.05);
    }

        .hero-index .lead {
            color: #6c757d !important;
        }

        .hero-index .fa-user-md {
            font-size: 1.8rem;
            vertical-align: middle;
        }


    .btn-primary {
        background: var(--primary-color);
        border: none;
        padding: 0.8rem 1.5rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    btn-primary:hover {
        background: var(--primary-color-dark);
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .btn-accent {
        background: #28a745;
        color: white !important;
        border: 2px solid rgba(255,255,255,0.2);
        padding: 0.8rem 1.5rem;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
    }

        .btn-accent:hover {
            background: #218838;
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    .table {
        --bs-table-bg: transparent;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table thead th {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-color-dark) 100%);
            border: none;
            font-weight: 600;
            padding: 1rem;
        }

        .table tbody tr {
            background: rgba(255,255,255,0.98);
            transition: all 0.2s ease;
            border-bottom: 1px solid #dee2e6;
        }

        .table tbody td {
            vertical-align: middle;
            padding: 1.25rem;
        }

        .table tbody tr:hover {
            transform: translateX(5px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

    .btn-action {
        width: 42px;
        height: 42px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 8px !important;
        transition: all 0.3s ease;
        font-size: 1.1rem;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 12px rgba(0,0,0,0.1);
        }

    .pagination .page-item .page-link {
        border-radius: 8px;
        margin: 0 3px;
        border: none;
        color: var(--secondary-color);
        min-width: 40px;
        text-align: center;
        transition: all 0.2s ease;
    }

    .pagination .page-item.active .page-link {
        background: var(--primary-color);
        color: white;
    }

    .hover-scale {
        transition: transform 0.3s ease;
        cursor: pointer;
    }

        .hover-scale:hover {
            transform: scale(1.02);
        }

    .badge.bg-success {
        background: linear-gradient(135deg, #28a745 0%, #218838 100%);
        padding: 0.8rem 1.2rem;
        font-size: 0.95rem;
        letter-spacing: 0.5px;
    }
</style>

@section Scripts {
    <script>
        // Ativa tooltips
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
    </script>
}
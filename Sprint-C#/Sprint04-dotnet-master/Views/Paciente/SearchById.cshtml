@model Sessions_app.Models.Paciente

<div class="container py-5">
    <!-- Header Section -->
    <div class="hero-details text-center mb-5">
        <div class="bg-primary-gradient rounded-3 p-4 shadow">
            <h2 class="display-5 fw-bold text-white mb-3">
                <i class="fas fa-user-injured me-3"></i>Detalhes do Paciente
            </h2>
            <p class="lead text-light">Informações completas do registro</p>
        </div>
    </div>

    <!-- Details Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-md-6">
                    <dl class="detail-list">
                        <div class="detail-item">
                            <dt class="text-primary">
                                <i class="fas fa-id-card me-2"></i>ID
                            </dt>
                            <dd class="text-secondary">@Model.IdPaciente</dd>
                        </div>

                        <div class="detail-item">
                            <dt class="text-primary">
                                <i class="fas fa-user me-2"></i>Nome
                            </dt>
                            <dd class="text-secondary">@Model.Nome</dd>
                        </div>

                        <div class="detail-item">
                            <dt class="text-primary">
                                <i class="fas fa-phone me-2"></i>Telefone
                            </dt>
                            <dd class="text-secondary">@Model.Telefone</dd>
                        </div>
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="detail-list">
                        <div class="detail-item">
                            <dt class="text-primary">
                                <i class="fas fa-envelope me-2"></i>E-mail
                            </dt>
                            <dd class="text-secondary">@Model.Email</dd>
                        </div>

                        <div class="detail-item">
                            <dt class="text-primary">
                                <i class="fas fa-birthday-cake me-2"></i>Data de Nascimento
                            </dt>
                            <dd class="text-secondary">
                                @(Model.DataNascimento.HasValue ? Model.DataNascimento.Value.ToString("dd/MM/yyyy") : "Não informada")
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-light py-3">
            <a asp-controller="Paciente" asp-action="Index" class="btn btn-primary-gradient">
                <i class="fas fa-arrow-left me-2"></i>Voltar para Lista
            </a>
        </div>
    </div>
</div>

<style>
    .hero-details {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    }

    .detail-item {
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .detail-item:hover {
        background-color: #f8f9fa;
    }

    dt {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--primary-color);
        border-bottom: 2px solid var(--accent-color);
        padding-bottom: 0.3rem;
    }

    dd {
        font-size: 1.05rem;
        color: #6c757d;
        padding-left: 1.5rem;
    }

    .btn-primary-gradient {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        transition: all 0.3s ease;
    }

    .btn-primary-gradient:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(42, 157, 143, 0.3);
    }

    .card {
        border-radius: 12px;
        overflow: hidden;
    }
</style>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Cuidados Dentais";
}

<div class="container py-5">
    <!-- Hero Section -->
    <div class="hero-care text-center mb-5">
        <div class="bg-primary-gradient rounded-3 p-5 shadow">
            <h1 class="display-4 fw-bold text-white mb-3">
                <i class="fas fa-smile-beam me-3"></i>Saúde Bucal Perfeita
            </h1>
            <p class="lead text-light mb-0">Guia completo para um sorriso saudável e radiante</p>
        </div>
    </div>

    <!-- Main Content -->
    <div class="card care-card border-0 shadow-lg">
        <div class="card-body p-4 p-lg-5">
            <!-- Tips Section -->
            <div class="row g-4">
                <!-- Main Tips -->
                <div class="col-lg-8">
                    <div class="dental-tips">
                        <h2 class="fw-bold mb-4 text-primary">
                            <i class="fas fa-lightbulb me-2"></i>5 Pilares Essenciais
                        </h2>

                        <div class="list-group care-list">
                            <div class="list-group-item border-0 p-3 mb-3 bg-light-hover">
                                <div class="d-flex align-items-center">
                                    <div class="icon-care bg-primary text-white rounded-circle me-3">
                                        <i class="fas fa-tooth fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1 fw-bold">Higiene Diária</h5>
                                        <p class="mb-0 text-secondary">Escove os dentes 3x ao dia com creme dental fluoretado</p>
                                    </div>
                                </div>
                            </div>

                            <div class="list-group-item border-0 p-3 mb-3 bg-light-hover">
                                <div class="d-flex align-items-center">
                                    <div class="icon-care bg-primary text-white rounded-circle me-3">
                                        <i class="fas fa-hand-sparkles fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1 fw-bold">Limpeza Profunda</h5>
                                        <p class="mb-0 text-secondary">Use fio dental diariamente e considere um irrigador oral</p>
                                    </div>
                                </div>
                            </div>

                            <div class="list-group-item border-0 p-3 mb-3 bg-light-hover">
                                <div class="d-flex align-items-center">
                                    <div class="icon-care bg-primary text-white rounded-circle me-3">
                                        <i class="fas fa-calendar-alt fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1 fw-bold">Prevenção Regular</h5>
                                        <p class="mb-0 text-secondary">Visite o dentista a cada 6 meses para check-ups</p>
                                    </div>
                                </div>
                            </div>

                            <div class="list-group-item border-0 p-3 mb-3 bg-light-hover">
                                <div class="d-flex align-items-center">
                                    <div class="icon-care bg-primary text-white rounded-circle me-3">
                                        <i class="fas fa-utensils fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1 fw-bold">Nutrição Saudável</h5>
                                        <p class="mb-0 text-secondary">Reduza açúcares e inclua cálcio e vitaminas</p>
                                    </div>
                                </div>
                            </div>

                            <div class="list-group-item border-0 p-3 bg-light-hover">
                                <div class="d-flex align-items-center">
                                    <div class="icon-care bg-primary text-white rounded-circle me-3">
                                        <i class="fas fa-ban-smoking fa-lg"></i>
                                    </div>
                                    <div>
                                        <h5 class="mb-1 fw-bold">Hábitos Saudáveis</h5>
                                        <p class="mb-0 text-secondary">Evite tabaco e álcool em excesso</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Side Cards -->
                <div class="col-lg-4">
                    <div class="sticky-top" style="top: 100px;">
                        <!-- Emergency Card -->
                        <div class="card alert-card bg-warning-gradient mb-4 border-0 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex align-items-center mb-3">
                                    <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                                    <h5 class="mb-0 fw-bold">Emergências Dentárias</h5>
                                </div>
                                <ul class="list-unstyled">
                                    <li class="mb-2">
                                        <i class="fas fa-teeth me-2"></i>
                                        Fratura dental: Preserve o fragmento
                                    </li>
                                    <li class="mb-2">
                                        <i class="fas fa-toothache me-2"></i>
                                        Dor intensa: Use compressa fria
                                    </li>
                                    <li>
                                        <i class="fas fa-phone-alt me-2"></i>
                                        Contato emergencial: (11) 99999-9999
                                    </li>
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Additional Info -->
            <div class="row g-4 mt-2">
                <div class="col-md-6">
                    <div class="info-card bg-light border-start border-4 border-primary p-4 rounded-3">
                        <h5 class="fw-bold text-primary mb-3">
                            <i class="fas fa-child me-2"></i>Cuidados Infantis
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-baby me-2"></i>
                                Primeira consulta até 1 ano
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-tooth me-2"></i>
                                Selantes de fissura
                            </li>
                            <li>
                                <i class="fas fa-brush me-2"></i>
                                Escovação supervisionada
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="info-card bg-light border-start border-4 border-primary p-4 rounded-3">
                        <h5 class="fw-bold text-primary mb-3">
                            <i class="fas fa-heartbeat me-2"></i>Saúde Integral
                        </h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <i class="fas fa-x-ray me-2"></i>
                                Relação com doenças sistêmicas
                            </li>
                            <li class="mb-2">
                                <i class="fas fa-brain me-2"></i>
                                Impacto na autoestima
                            </li>
                            <li>
                                <i class="fas fa-microscope me-2"></i>
                                Prevenção de infecções
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-care {
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    }

    .care-card {
        border-radius: 20px;
        overflow: hidden;
    }

    .icon-care {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-light-hover {
        transition: all 0.3s ease;
        border-radius: 12px;
    }

        .bg-light-hover:hover {
            background-color: #f8f9fa !important;
            transform: translateX(10px);
        }

    .alert-card {
        border-radius: 15px;
        transition: transform 0.3s ease;
    }

        .alert-card:hover {
            transform: translateY(-5px);
        }

    .bg-warning-gradient {
        background: linear-gradient(135deg, #ffc107 0%, #fd7e14 100%);
    }

    .info-card {
        transition: all 0.3s ease;
    }

        .info-card:hover {
            box-shadow: 0 10px 20px rgba(0,0,0,0.05);
            transform: translateY(-3px);
        }

    .care-list li {
        font-size: 1.05rem;
    }

    .border-primary {
        border-color: var(--primary-color) !important;
    }
</style>

@section Scripts {
    <script>
        // Adiciona animação suave ao scroll
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });
    </script>
}